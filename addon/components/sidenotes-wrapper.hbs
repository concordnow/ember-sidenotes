<div
  class="sidenotes-wrapper"
  ...attributes
  {{did-update this.onSelectedSidenoteIdUpdate @selectedSidenoteId}}
  {{did-update this.onItemsDidChange @items}}
>
  {{#each @items key=this.key as |item|}}
    {{yield
      (component
        "sidenote"
        onRegister=this.onRegisterSidenote
        onResize=this.onResizeSidenote
        onSelect=this.onSelectSidenote
        onUnselect=this.onUnselectSidenote
        selectedSidenoteId=this._selectedSidenoteId
      )
      item
    }}
  {{/each}}
</div>